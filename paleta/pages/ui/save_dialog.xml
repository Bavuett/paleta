<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0" />
  <template class="SaveDialog" parent="AdwMessageDialog">
    <property name="heading" translatable="yes">Save Palette?</property>
    <!-- <property name="body" translatable="yes">Test Body</property> -->
    <property name="default-response">save</property>
    <property name="close-response">cancel</property>
    <property name="destroy-with-parent">true</property>


    <signal name="response" handler="save_dialog_response"/>
    <responses>
      <response id="cancel" translatable="yes">_Cancel</response>
      <response id="save" translatable="yes" appearance="suggested" enabled="true">_Save</response>
    </responses>
    <child>
      <object class="GtkListBox">

        <style>
          <class name="boxed-list"/>
        </style>

        <!-- <property name="orientation">vertical</property> -->
        
        <child>
          <object class="AdwEntryRow" id="title_adw_entry">
            <property name="title" translatable="yes">Palette _Name</property>
            <property name="use_underline">True</property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
